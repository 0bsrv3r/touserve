            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <!-- Page-Title -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="btn-group pull-right m-t-15">
                                    <button type="button" class="btn btn-default dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false">Settings <span class="m-l-5"><i class="fa fa-cog"></i></span></button>
                                    <ul class="dropdown-menu drop-menu-right" role="menu">
                                        <li><a href="#">Action</a></li>
                                        <li><a href="#">Another action</a></li>
                                        <li><a href="#">Something else here</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Separated link</a></li>
                                    </ul>
                                </div>

                                <h4 class="page-title">Add Your Guide</h4>
                            </div>
                        </div>
                        
                        <div class="row">
							<div class="col-lg-12">
								<div class="card-box">
									<h4 class="m-t-0 header-title"><b>Tour Form</b></h4>
									<p class="text-muted font-13 m-b-30">
	                                    <!-- Your events text goes here. -->
	                                </p>
		                                        
									<form action="/dashboard/guides" method="post" enctype="multipart/form-data" novalidate>
                                        <div class="form-group col-lg-6">
                                            <label class="control-label">Image</label>
                                            <input type="file" class="filestyle" name="image" data-buttontext="Select file" data-buttonname="btn-white">
                                            <% if (errors.image) { %>
                                                <p style="color: red;"><%= errors.image %></p>
                                            <% } %> 
                                        </div>
										<div class="form-group col-lg-6">
											<label for="userName">Title</label>
											<input type="text" name="title" parsley-trigger="change" required placeholder="Enter event title" class="form-control" id="userName">
                                            <% if (errors.title) { %>
                                                <p style="color: red;"><%= errors.title %></p>
                                            <% } %> 
                                        </div>
                                        <div class="form-group col-lg-6">
                                            <label class="control-label">Category</label>
                                            <select name="category" class="selectpicker" data-style="btn-white">
                                                <option>Culture & Art</option>
                                                <option>Beauty & Health</option>
                                                <option>Entertainment</option>
                                                <option>OffRoad</option>
                                                <option>Hunting</option>
                                            </select>
                                            <% if (errors.category) { %>
                                                <p style="color: red;"><%= errors.category %></p>
                                            <% } %> 
                                        </div>
                                        <div class="form-group col-lg-6">
											<label for="userName">Location</label>
											<input type="text" name="location" parsley-trigger="change" required placeholder="Enter location" class="form-control" id="userName">
                                            <% if (errors.location) { %>
                                                <p style="color: red;"><%= errors.location %></p>
                                            <% } %> 
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Departure Time</label>
                                            <div class="input-group form-group col-lg-6">
                                                <div class="bootstrap-timepicker">
                                                    <input id="timepicker" type="text" class="form-control">
                                                </div>
                                                <span class="input-group-addon bg-custom b-0 text-white"><i class="glyphicon glyphicon-time"></i></span>
                                            </div><!-- input-group -->
                                            <div class="form-group col-lg-6">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="datepicker-autoclose">
                                                        <span class="input-group-addon bg-custom b-0 text-white"><i class="icon-calender"></i></span>
                                                    </div><!-- input-group -->
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-6">
											<label for="userName">Highlights</label>
											<select name="highlights" class="select2 select2-multiple" multiple="multiple" multiple data-placeholder="Choose ...">
		                                        <optgroup label="Languages">
		                                            <option value="Walking">Walking</option>
		                                            <option value="Breakfast">Breakfast</option>
		                                            <option value="Entertainment">Entertainment</option>
		                                            <option value="Dinner">Dinner</option>
		                                            <option value="Hotel">Hotel</option>
		                                        </optgroup>
		                                    </select>
                                            <% if (errors.highlights) { %>
                                                <p style="color: red;"><%= errors.highlights %></p>
                                            <% } %> 
                                        </div>
                                        <div class="form-group col-lg-6">
											<label for="userName">Inclusious</label>
											<select name="inclusious" class="select2 select2-multiple" multiple="multiple" multiple data-placeholder="Choose ...">
		                                        <optgroup label="Languages">
                                                    <option value="Walking">Walking</option>
		                                            <option value="Breakfast">Breakfast</option>
		                                            <option value="Entertainment">Entertainment</option>
		                                            <option value="Dinner">Dinner</option>
		                                            <option value="Hotel">Hotel</option>
		                                        </optgroup>
		                                    </select>
                                            <% if (errors.inclusious) { %>
                                                <p style="color: red;"><%= errors.inclusious %></p>
                                            <% } %> 
                                        </div>
                                        <div class="form-group col-lg-4">
											<label for="userName">Price</label>
											<input type="text" name="price" parsley-trigger="change" required placeholder="Enter location" class="form-control" id="userName">
                                            <% if (errors.price) { %>
                                                <p style="color: red;"><%= errors.location %></p>
                                            <% } %> 
                                        </div>
										<div class="form-group col-lg-4">
                                            <label class="control-label">Currency</label>
                                            <select name="currency" class="selectpicker" data-style="btn-white">
                                                <option>AZN</option>
                                                <option>USD</option>
                                                <option>EUR</option>
                                            </select>
                                            <% if (errors.currency) { %>
                                                <p style="color: red;"><%= errors.currency %></p>
                                            <% } %> 
                                        </div>
                                        <div class="form-group col-lg-4">
                                            <label class="control-label">Duration</label>
                                            <select name="duration" class="selectpicker" data-style="btn-white">
                                                <option value="1">1 day</option>
                                                <option value="2">2 days</option>
                                                <option value="3">3 days</option>
                                                <option value="4">4 days</option>
                                                <option value="5">5 days</option>
                                                <option value="6">6 days</option>
                                            </select>
                                            <% if (errors.duration) { %>
                                                <p style="color: red;"><%= errors.duration %></p>
                                            <% } %> 
                                        </div>
                                        <div class="form-group col-lg-4">
                                            <label class="control-label">Gender</label>
                                            <select name="gender" class="selectpicker" data-style="btn-white">
                                                <option>Female</option>
                                                <option>Male</option>
                                            </select>
                                            <% if (errors.gender) { %>
                                                <p style="color: red;"><%= errors.gender %></p>
                                            <% } %> 
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Overview</label>
                                            <textarea name="overview" required class="form-control"></textarea>
                                            <% if (errors.overview) { %>
                                                <p style="color: red;"><%= errors.overview %></p>
                                            <% } %>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Additional Info</label>
                                            <textarea name="additional" required class="form-control"></textarea>
                                            <% if (errors.additional) { %>
                                                <p style="color: red;"><%= errors.additional %></p>
                                            <% } %>
                                        </div>
										<div class="form-group text-right m-b-0">
											<button class="btn btn-primary waves-effect waves-light" type="submit">
												Submit
											</button>
										</div>
									</form>
								</div>
							</div>
							
						</div>
                        
            		</div> <!-- container -->
                               
                </div> <!-- content -->

                <footer class="footer">
                    © 2016. All rights reserved.
                </footer>

            </div>
