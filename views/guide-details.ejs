<!-- Blog posts -->
<section class="flat-row custom-flat-row pd-destination-details bg-theme">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-12 col-xs-12">
                <div class="wrap-destination-detail custom-wrap-destination-detail">
                    <div class="box-trip-review custom-box-trip-review">
                        <div class="col-md-4 col-sm-4 col-xs-12 custom-resp-center">
                            <div class="featured-trip custom-featured-trip">
                                <img class="custom-img" src="/<%- guide.image %>" alt="img">
                            </div>
                            <div class="content-trip custom-content-trip">
                                <h4 class="title"><a href="#"><%- guide.name %> <%- guide.surname %></a></h4>
                                <p class="sub-title">
                                    <%- guide.languages %>
                                </p>
                                <div class="wrap-star s2">
                                    <ul class="star">
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                        <li></li>
                                    </ul>
                                    <div class="reviews">(14 reviews)</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <div class="wrap-title custom-wrap-title">
                                <h4>Your need to know</h4>
                            </div>

                            <div class="box-map">
                                <div class="info-map custom-info-map ">
                                    <div class="left">
                                        <p>Age</p>
                                        <p>Experience</p>
                                        <p>Gender</p>
                                        <p>Location</p>
                                        <p>Visa requirement</p>
                                        <p>Currency used</p>
                                    </div>
                                    <div class="right">
                                        <p><%- guide.age %></p>
                                        <p><%- guide.experience %> Years</p>
                                        <p><%- guide.gender %></p>
                                        <p><%- guide.location %></p>
                                        <p><%- guide.visa %></p>
                                        <p><%- guide.currency %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-trip-review -->
                </div>
                <!-- /.post-wrap -->            

                <div class="guide-overview">
                    <div class="wrap-title s2">
                        <h4>Overview</h4>
                    </div>
                    <p class="content-destination">
                        <%- guide.description %>
                    </p>
                </div>

                <div class="flat-tabs" data-effect="fadeIn">
                    <div class="wrap-radio menu-tab">

                        <div class="radio active">
                            <input id="radio-1" name="radio" type="radio" checked="checked">
                            <label for="radio-1" class="radio-label">Review</label>
                        </div>

                        <div class="radio">
                            <input id="radio-2" name="radio" type="radio">
                            <label for="radio-2" class="radio-label">Add Review</label>
                        </div>
                    </div>
                    <!-- /.menu-tab -->
                    <div class="content-tab">
                        <div class="content-inner active">
                            <div class="flat-list-review">
                                <ul class="list-review clearfix">
                                    <li class="item">
                                        <div class="thumb overlays2">
                                            <a href="#" class="link">
                                                <img src="/upload/images/clients/rv-i1.jpg" alt="image">
                                            </a>
                                        </div>
                                        <div class="text">
                                            <h5>
                                            <a href="#">Valentino Morose</a>
                                        </h5>
                                            <p class="date">Aug 20, 2017</p>
                                            <div class="wrap-star s2 v1">
                                                <ul class="star">
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                </ul>
                                            </div>
                                            <div class="sub-title">Ma quande lingues coalesce, li grammatica del resultant lingue es plu simplic e regulari quam ti del coalescent lingues.</div>
                                        </div>
                                    </li>

                                    <li class="item">
                                        <div class="thumb overlays2">
                                            <a href="#" class="link">
                                                <img src="/upload/images/clients/rv-i2.jpg" alt="image">
                                            </a>
                                        </div>
                                        <div class="text">
                                            <h5>
                                            <a href="#">Wisteria Ravenclaw</a>
                                        </h5>
                                            <p class="date">May 04, 2017</p>
                                            <div class="wrap-star s2 v1">
                                                <ul class="star">
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                </ul>
                                            </div>
                                            <div class="sub-title">Ma quande lingues coalesce, li grammatica del resultant lingue es plu simplic e regulari quam ti del coalescent lingues.</div>
                                        </div>
                                    </li>

                                    <li class="item">
                                        <div class="thumb overlays2">
                                            <a href="#" class="link">
                                                <img src="/upload/images/clients/rv-i3.jpg" alt="image">
                                            </a>
                                        </div>
                                        <div class="text">
                                            <h5>
                                            <a href="#">Phillip Anthropy</a>
                                        </h5>
                                            <p class="date">June 02, 2017</p>
                                            <div class="wrap-star s2 v1">
                                                <ul class="star">
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                    <li></li>
                                                </ul>
                                            </div>
                                            <div class="sub-title">Ma quande lingues coalesce, li grammatica del resultant lingue es plu simplic e regulari quam ti del coalescent lingues.</div>
                                        </div>
                                    </li>
                                </ul>
                                <!-- /.popular-news -->
                            </div>
                        </div>
                        <!-- /.content-inner -->

                        <div class="content-inner">
                            <div class="flat-add-review">
                                <h4 class="title">Add Review</h4>
                                <div class="wrap-form-add-review">
                                    <form class="form-add-review">
                                        <div class="wrap-add-review-input">
                                            <div class="one-half s1">
                                                <p class="add-review-input">
                                                    <label>Name*</label>
                                                    <input id="name" name="name" type="text">
                                                </p>
                                                <p class="add-review-input">
                                                    <label>Email*</label>
                                                    <input id="email" name="email" type="email">
                                                </p>
                                            </div>
                                            <div class="one-half s2">
                                                <p class="add-review-textarea">
                                                    <label>Your Review*</label>
                                                    <textarea id="yourreview" name="yourreview" required="required"></textarea>
                                                </p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="your-rating">
                                    <div class="wrap-star s2 v1">
                                        <div class="rating">Your Rating*</div>
                                        <ul class="star v1">
                                            <li></li>
                                            <li></li>
                                            <li></li>
                                            <li></li>
                                            <li></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.content-inner -->
                    </div>
                    <!-- /.content-tab -->
                </div>
                <!-- /.flat-tabs -->
                
                <!-- Tours of Guides Slide -->
                <% if(guide.tours.length !== 0){ %>
                <section id="demos" class="custom-demos">
                    <div class="row">
                        <div class="widget widget-reviewes-tours">
                            <h4 class="widget-title"><span>Tours</span> of Guide</h4>
                        </div>
                        <div class="large-12 columns">
                            <div class="owl-carousel owl-theme popular-news clearfix">

                                
                                <% for(let tours of guide.tours){ %>
                                <div class="item custom-item">
                                    <div class="thumb overlays2">
                                        <a href="/tour-details/<%- tours.id %>" class="link">
                                            <img src="/<%- tours.images[0] %>" alt="image">
                                        </a>
                                    </div>
                                    <div class="text">
                                        <p class="sub-text">
                                            <a href="#"><%- tours.title %></a>
                                        </p>
                                        <p class="money"><%- tours.price %> <%- tours.currency %></p>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </section>
                <% } %>
            </div>
            <!-- /.col-md-9 -->

            <div class="col-md-3">
                <div class="sidebar">
                    <div class="widget widget-popular-destination">
                        <h4 class="widget-title">Professional License/Certificate</h4>
                        <ul>
                            <li class="item">
                                <div class="featured-widget">
                                    <img src="/<%- guide.certificate %>" alt="image">
                                </div>
                            </li>
                            <!-- /.item -->
                        </ul>
                    </div>
                    <!-- /.widget-categories -->
                </div>
                <!-- /.sidebar -->
            </div>
            <!-- /.col-md-3 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>