            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <!-- Page-Title -->
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-sm-12">
                                <h4 class="page-title">Add Your Guide</h4>
                            </div>
                        </div>
                        
                        <div class="row">
							<div class="col-lg-12">
								<div class="card-box">
									<h4 class="m-t-0 header-title"><b>Guide Form</b></h4>
									<p class="text-muted font-13 m-b-30">
	                                    <!-- Your events text goes here. -->
	                                </p>
		                                        
									<form action="/admin/guides/update/<%= guide.id %>" method="post" enctype="multipart/form-data" novalidate>
                                        <div class="col-lg-12">
                                            <div class="form-group col-lg-6">
                                                <label class="control-label">Image</label>
                                                <input type="file" class="filestyle" name="image" data-buttontext="Select file" data-buttonname="btn-white">
                                                <% if (errors.image) { %>
                                                    <p style="color: red;"><%= errors.image %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label class="control-label">Certificate</label>
                                                <input type="file" class="filestyle" name="certificate" data-buttontext="Select file" data-buttonname="btn-white">
                                                <% if (errors.certificate) { %>
                                                    <p style="color: red;"><%= errors.certificate %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label for="userName">Name</label>
                                                <input type="text" name="name" value="<%= guide.name %>" parsley-trigger="change" required placeholder="Enter event title" class="form-control" id="userName">
                                                <% if (errors.name) { %>
                                                    <p style="color: red;"><%= errors.name %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label for="userName">Surname</label>
                                                <input type="text" name="surname" value="<%= guide.surname %>" parsley-trigger="change" required placeholder="Enter event title" class="form-control" id="userName">
                                                <% if (errors.surname) { %>
                                                    <p style="color: red;"><%= errors.surname %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-3">
                                                <label class="control-label">Country</label>
                                                <select name="country" class="selectpicker" data-style="btn-white">
                                                    <option>Azerbaijan</option>
                                                    <option>Turkey</option>
                                                    <option>Georgia</option>
                                                </select>
                                                <% if (errors.country) { %>
                                                    <p style="color: red;"><%= errors.country %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-3">
                                                <label class="control-label">City</label>
                                                <select name="city" class="selectpicker" data-style="btn-white">
                                                    <option>Baku</option>
                                                    <option>Guba</option>
                                                    <option>Shaki</option>
                                                </select>
                                                <% if (errors.city) { %>
                                                    <p style="color: red;"><%= errors.city %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label for="userName">Languages</label>
                                                <select name="languages" class="select2 select2-multiple" multiple="multiple" multiple data-placeholder="Choose ...">
                                                    <optgroup label="Languages">
                                                        <option value="English">English</option>
                                                        <option value="Russian">Russian</option>
                                                        <option value="Turkish">Turkish</option>
                                                        <option value="Germany">Germany</option>
                                                        <option value="French">French</option>
                                                        <option value="Spanish">Spanish</option>
                                                    </optgroup>
                                                </select>
                                                <% if (errors.languages) { %>
                                                    <p style="color: red;"><%= errors.languages %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label class="control-label">Age</label>
                                                <select name="age" class="selectpicker" data-style="btn-white">
                                                    <option <%= guide.age === 15 ? 'selected' : '' %>>15</option>
                                                    <option <%= guide.age === 16 ? 'selected' : '' %>>16</option>
                                                    <option <%= guide.age === 17 ? 'selected' : '' %>>17</option>
                                                </select>
                                                <% if (errors.age) { %>
                                                    <p style="color: red;"><%= errors.age %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label class="control-label">Experience</label>
                                                <select name="experience" class="selectpicker" data-style="btn-white">
                                                    <option value="1" <%= guide.experience === 1 ? 'selected' : '' %>>1 Years</option>
                                                    <option value="2" <%= guide.experience === 2 ? 'selected' : '' %>>2 Years</option>
                                                    <option value="3" <%= guide.experience === 3 ? 'selected' : '' %>>3 Years</option>
                                                    <option value="4" <%= guide.experience === 4 ? 'selected' : '' %>>4 Years</option>
                                                    <option value="5" <%= guide.experience === 5 ? 'selected' : '' %>>5 Years</option>
                                                    <option value="6" <%= guide.experience === 6 ? 'selected' : '' %>>6 Years</option>
                                                </select>
                                                <% if (errors.experience) { %>
                                                    <p style="color: red;"><%= errors.experience %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-4">
                                                <label class="control-label">Gender</label>
                                                <select name="gender" class="selectpicker" data-style="btn-white">
                                                    <option <%= guide.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                                    <option <%= guide.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                                </select>
                                                <% if (errors.gender) { %>
                                                    <p style="color: red;"><%= errors.gender %></p>
                                                <% } %> 
                                            </div>
                                            <div class="form-group col-lg-12">
                                                <div class="form-group">
                                                    <label class="control-label">Description</label>
                                                    <textarea name="description" required class="form-control"><%= guide.description %></textarea>
                                                    <% if (errors.description) { %>
                                                        <p style="color: red;"><%= errors.description %></p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
										<div class="form-group text-right m-b-0">
											<button class="btn btn-primary waves-effect waves-light" type="submit">
												Submit
											</button>
										</div>
									</form>
								</div>
							</div>
							
						</div>
                        
            		</div> <!-- container -->
                               
                </div> <!-- content -->

                <footer class="footer">
                    Â© 2016. All rights reserved.
                </footer>

            </div>
